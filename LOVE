const messageEl=document.getElementById('message'); const revealBtn=document.getElementById('revealBtn');

function spawnHeart(){ const h=document.createElement('div'); h.className='heart'; h.textContent='‚ù§'; h.style.left=Math.random()*100+'vw'; h.style.bottom='-10vh'; h.style.fontSize=(12+Math.random()*20)+'px'; h.style.animationDuration=(6+Math.random()*6)+'s'; document.getElementById('hearts').appendChild(h); setTimeout(()=>h.remove(),12000); } setInterval(spawnHeart,800);

